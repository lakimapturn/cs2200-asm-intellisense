{
  "name": "cs2200-asm-intellisense",
  "displayName": "cs2200-asm-intellisense",
  "description": "Intellisense for CS2200's LC2200 ISA",
  "version": "0.2.0",
  "publisher": "lakimapturn",
  "repository": {
    "type": "git",
    "url": "https://github.com/lakimapturn/cs2200-asm-intellisense.git"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cs2200asm.selectIsaFile",
        "title": "CS2200 ASM: Select ISA File",
        "category": "CS2200 Assembly"
      },
      {
        "command": "cs2200asm.resetToDefaultIsa",
        "title": "CS2200 ASM: Reset to Default ISA",
        "category": "CS2200 Assembly"
      }
    ],
    "configuration": {
      "title": "CS2200 Assembly",
      "properties": {
        "cs2200asm.isaFilePath": {
          "type": "string",
          "default": "",
          "description": "Path to the ISA specification file (.isa). Leave empty to use default instruction set.",
          "scope": "workspace"
        }
      }
    },
    "languages": [
      {
        "id": "cs2200asm",
        "aliases": [
          "CS2200 Assembly",
          "cs2200asm"
        ],
        "extensions": [
          ".s",
          ".asm"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.32.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
